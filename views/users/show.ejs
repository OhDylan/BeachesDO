<% include ../partials/header%>

<div class="row">
    <div class="col-md-4">
        <h1 style="color:white; font-family: Georgia, 'Times New Roman', Times, serif"><%= user.firstName + " " + user.lastName %></h1>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
        </div>
        <div class="col-md-8">
            <h3 style="color:white; font-family: Georgia, 'Times New Roman', Times, serif"><%= user.username %>'s beaches:</h3>
            <ul class="list-group">
                <% campgrounds.forEach((campground)=>{ %>
                    <li class="list-group-item"><a style="color:white; font-family: Georgia, 'Times New Roman', Times, serif" href="/campgrounds/<%=campground.id %>"><%= campground.name %></a></li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>

<% include ../partials/footer%>