<% include ../partials/header%>
<div class='container'>
	
	<header class='jumbotron'>
		<div class='container'>
			<h2>
				Welcome to The Sun And The Beach!
			</h2>
				<p>
					Find the best beaches in the world! Feel free to share with people the beaches that you had been to!
				</p>
				<p>
					<form action="/campgrounds" method="GET" class="form-inline">
						<div class="form-group">
							<input type= "text" name="search" placeholder="Beach search" class="form-control">
							<input type="submit" value="Search" class="btn btn-light">
						</div>
					</form>
				</p>
				<p>
					<a class='btn btn-info btn-lg' href='/campgrounds/new'>Add a new beach</a>
				</p>	
		</div>
	
	</header>

	



	<div class = 'row text-center' style='display:flex; flex-wrap:wrap;'>

		<%if(campgrounds.length<1){ %>
				<div class='container no-match'>
						No Match Found
				</div>

		<%} else {%>

			<% campgrounds.forEach((campground)=>{ %>
				<div class = 'col-md-3 col-sm-6'>
					<div class= 'thumbnail' style="height: 350px">
						
						<img src='<%= campground.image %>' style="width: auto; height: 200px" >
							<div class='caption'>
							<h4>
								<%= campground.name %>
							</h4>
					
					</div>
					<p>
						<a href = '/campgrounds/<%= campground._id %>' class= 'btn btn-primary'>More Info</a>
					</p>
				</div>		
			</div>
			<% }); %>
			
		<% } %>
		
		
	</div>

		
</div>


<% include ../partials/footer%>