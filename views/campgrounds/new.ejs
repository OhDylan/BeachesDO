<% include ../partials/header%>

<div class='container'>
	
	<div class='row'>
		<h1 style ="text-align:center;color:white; font-family: Georgia, 'Times New Roman', Times, serif">
			Create a New Beach!
		</h1>
		<div style='width: 30%; margin:25px auto;'>
			<form action='/campgrounds' method='POST'>
				<div class='form-group'>
					<label style="color:white" for="name">Name</label>
					<input class ='form-control' type= 'text' name = 'name' placeholder='name'>
				</div>
			<div class ='form-group'>
					<label style="color:white" for="image">Image</label>
					<input class ='form-control' type= 'text' name = 'image' placeholder= 'image url'>
				</div>
			<div class ='form-group'>
					<label style="color:white" for="description">Description</label>
					<input class ='form-control' type= 'text' name = 'description' placeholder= 'description'>
			</div>
			<div class="form-group">
				<label style="color:white" for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" placeholder="location">
			</div>
			<div class ='form-group'>
			<button class ='btn btn-lg btn-default btn-block btn-primary' onclick="this.form.submit(); this.disabled = true;">
				Submit
			</button>
				</div>

		</form>
			<a href='/campgrounds'>Go back</a>
			
		</div>
		

		
	</div>


</div>

<% include ../partials/footer%>